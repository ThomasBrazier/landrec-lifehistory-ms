@article{lesecqueRedQueenModel2014,
  title = {The {{Red Queen Model}} of {{Recombination Hotspots Evolution}} in the {{Light}} of {{Archaic}} and {{Modern Human Genomes}}},
  author = {Lesecque, Yann and Gl{\'e}min, Sylvain and Lartillot, Nicolas and Mouchiroud, Dominique and Duret, Laurent},
