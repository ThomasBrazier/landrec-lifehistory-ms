@article{shenGenomewideRecombinationRate2017,
  title = {Genome-Wide Recombination Rate Variation in a Recombination Map of Cotton},
  author = {Shen, Chao and Li, Ximei and Zhang, Ruiting and Lin, Zhongxu},
