  author = {Li, Dawei and Cuevas, Hugo E and Yang, Luming and Li, Yuhong and {Garcia-Mas}, Jordi and Zalapa, Juan and Staub, Jack E and Luan, Feishi and Reddy, Umesh and He, Xiaoming and Gong, Zhenhui and Weng, Yiqun},
