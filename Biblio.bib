  author = {Shi, Yuzhen and Zhang, Baocai and Liu, Aiying and Li, Wentan and Li, Junwen and Lu, Quanwei and Zhang, Zhen and Li, Shaoqi and Gong, Wankui and Shang, Haihong and Gong, Juwu and Chen, Tingting and Ge, Qun and Wang, Tao and Zhu, Heqin and Liu, Zhi and Yuan, Youlu},
