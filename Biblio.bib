@article{agrenMatingSystemShifts2014a,
  title = {Mating System Shifts and Transposable Element Evolution in the Plant Genus {{Capsella}}},
  author = {{\AA}gren, J and Wang, Wei and Koenig, Daniel and Neuffer, Barbara and Weigel, Detlef and Wright, Stephen I},
  year = {2014},
