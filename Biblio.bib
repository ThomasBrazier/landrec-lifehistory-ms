@article{xuMaleSpecificGeneticMap2015,
  title = {A {{Male-Specific Genetic Map}} of the {{Microcrustacean}} {{{\emph{Daphnia}}}}{\emph{ Pulex}} {{Based}} on {{Single-Sperm Whole-Genome Sequencing}}},
