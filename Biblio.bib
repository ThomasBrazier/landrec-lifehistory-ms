@article{yelinaEpigeneticRemodelingMeiotic2012b,
  title = {Epigenetic {{Remodeling}} of {{Meiotic Crossover Frequency}} in {{{\emph{Arabidopsis}}}}{\emph{ Thaliana}} {{DNA Methyltransferase Mutants}}},
  author = {Yelina, Nataliya E. and Choi, Kyuha and Chelysheva, Liudmila and Macaulay, Malcolm and {de Snoo}, Bastiaan and Wijnker, Erik and Miller, Nigel and Drouaud, Jan and Grelon, Mathilde and Copenhaver, Gregory P. and Mezard, Christine and Kelly, Krystyna A. and Henderson, Ian R.},
