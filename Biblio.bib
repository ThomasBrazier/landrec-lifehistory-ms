@article{matsumuraLongreadBitterGourd2020,
  title = {Long-Read Bitter Gourd ( {{{\emph{Momordica}}}}{\emph{ Charantia}} ) Genome and the Genomic Architecture of Nonclassic Domestication},
  author = {Matsumura, Hideo and Hsiao, Min-Chien and Lin, Ya-Ping and Toyoda, Atsushi and Taniai, Naoki and Tarora, Kazuhiko and Urasaki, Naoya and Anand, Shashi S. and Dhillon, Narinder P. S. and Schafleitner, Roland and Lee, Cheng-Ruei},
  year = {2020},
