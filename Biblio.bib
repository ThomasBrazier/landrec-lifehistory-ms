@article{zhangCompartmentalizedSignalingNetwork2018,
  title = {A Compartmentalized Signaling Network Mediates Crossover Control in Meiosis},
  author = {Zhang, Liangyu and K{\"o}hler, Simone and {Rillo-Bohn}, Regina and Dernburg, Abby F},
  year = {2018},
