  author = {Ganal, Martin W. and Durstewitz, Gregor and Polley, Andreas and B{\'e}rard, Aur{\'e}lie and Buckler, Edward S. and Charcosset, Alain and Clarke, Joseph D. and Graner, Eva-Maria and Hansen, Mark and Joets, Johann and Le Paslier, Marie-Christine and McMullen, Michael D. and Montalent, Pierre and Rose, Mark and Sch{\"o}n, Chris-Carolin and Sun, Qi and Walter, Hildrun and Martin, Olivier C. and Falque, Matthieu},
