@article{guoLDSplitDBDatabaseStudies2018,
  title = {{{LDSplitDB}}: A Database for Studies of Meiotic Recombination Hotspots in {{MHC}} Using Human Genomic Data},
  shorttitle = {{{LDSplitDB}}},
  author = {Guo, Jing and Chen, Hao and Yang, Peng and Lee, Yew Ti and Wu, Min and Przytycka, Teresa M. and Kwoh, Chee Keong and Zheng, Jie},
  year = {2018},
