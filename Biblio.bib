@article{gardinerAnalysisRecombinationLandscape2019a,
  title = {Analysis of the Recombination Landscape of Hexaploid Bread Wheat Reveals Genes Controlling Recombination and Gene Conversion Frequency},
  author = {Gardiner, Laura-Jayne and Wingen, Luzie U. and Bailey, Paul and Joynson, Ryan and Brabbs, Thomas and Wright, Jonathan and Higgins, James D. and Hall, Neil and Griffiths, Simon and Clavijo, Bernardo J. and Hall, Anthony},
