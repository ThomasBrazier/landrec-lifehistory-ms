@article{prusickiLiveCellImaging2019,
  title = {Live Cell Imaging of Meiosis in {{{\emph{Arabidopsis}}}}{\emph{ Thaliana}}},
  author = {Prusicki, Maria A and Keizer, Emma M and {van Rosmalen}, Rik P and Komaki, Shinichiro and Seifert, Felix and M{\"u}ller, Katja and Wijnker, Erik and Fleck, Christian and Schnittger, Arp},
  year = {2019},
