@article{lesecqueGCBiasedGeneConversion2013,
  title = {{{GC-Biased Gene Conversion}} in {{Yeast Is Specifically Associated}} with {{Crossovers}}: {{Molecular Mechanisms}} and {{Evolutionary Significance}}},
