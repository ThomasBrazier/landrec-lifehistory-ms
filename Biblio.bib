@article{lartillotPhylogeneticPatternsGCBiased2013,
  title = {Phylogenetic {{Patterns}} of {{GC-Biased Gene Conversion}} in {{Placental Mammals}} and the {{Evolutionary Dynamics}} of {{Recombination Landscapes}}},
  author = {Lartillot, Nicolas},
